@model IEnumerable<BuildMyPC.Models.PowerSupply>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Select CPU</h2>

@if (!Model.Any())
{
    <p>There are no PowerSupplies availble.</p>
}

else
{

    <table class="table table-dark table-hover">
        <thread>
            <tr>
                <th>Power Supply (Click for Details)</th>
                <th>Efficiency</th>
                <th>Watts</th>
                <th>Price</th>
                <th>Action</th>


            </tr>
        </thread>
        <tbody>

            @foreach (var powersupply in Model)
            {
                <tr>
                    <td>@Html.ActionLink(powersupply.Name, "Details", "PowerSupply", new { id = powersupply.Id }, null)</td>
                    <td>@powersupply.Efficiency</td>
                    <td>@powersupply.Watts W</td>
                    <td>$@powersupply.Price </td>
                    <td>@Html.ActionLink("Add Memory", "Addpowersupply", "PowerSupply", new { id = powersupply.Id }, null)</td>

                </tr>
            }
        </tbody>
    </table>









}

