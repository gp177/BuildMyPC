@model BuildMyPC.ViewModels.BuildViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Build</h2>
<hr />

<table>
    <tr>
        <th>Component</th>
        <th>&nbsp;</th>
        <th>Price</th>
    </tr>

    <tr>
        <td>
            <ul class="list-unstyled">
                <li><b>Mother Board</b></li>
                <li>@Model.MotherboardBrand.BrandName ,@Model.Motherboard.Name, Socket:@Model.Motherboard.Socket  </li>
            </ul>
        </td>
        <td>&nbsp;</td>
        <td>
            @Model.Powersupply.Price $
        </td>
    </tr>


    <tr>
        <td>
            <ul class="list-unstyled">
                <li><b>CPU</b></li>
                <li>@Model.CpuBrand.BrandName ,@Model.Cpu.Name, @Model.Cpu.Speed MHz</li>
            </ul>
        </td>
        <td>&nbsp;</td>
        <td>
            @Model.Cpu.Price $
        </td>
    </tr>

    <tr>
        <td>
            <ul class="list-unstyled">
                <li><b>Memory</b></li>
                <li>@Model.MemoryBrand.BrandName ,@Model.Memory.Name, @Model.Memory.Size MHz</li>
            </ul>
        </td>
        <td>&nbsp;</td>
        <td>
            @Model.Memory.Price $
        </td>
    </tr>

    <tr>
        <td>
            <ul class="list-unstyled">
                <li><b>Storage</b></li>
                <li>@Model.StorageBrand.BrandName ,@Model.Storage.Name, @Model.Storage.Size Gb</li>
            </ul>
        </td>
        <td>&nbsp;</td>
        <td>
            @Model.Storage.Price $
        </td>
    </tr>

    <tr>
        <td>
            <ul class="list-unstyled">
                <li><b>Video Card</b></li>
                <li>@Model.VideocardBrand.BrandName ,@Model.Videocard.Name, @Model.Videocard.Memory Gb</li>
            </ul>
        </td>
        <td>&nbsp;</td>
        <td>
            @Model.Videocard.Price $
        </td>
    </tr>

    <tr>
        <td>
            <ul class="list-unstyled">
                <li><b>Case</b></li>
                <li>@Model.CaseBrand.BrandName ,@Model.Case.Name</li>
            </ul>
        </td>
        <td>&nbsp;</td>
        <td>
            @Model.Case.Price $
        </td>
    </tr>

    <tr>
        <td>
            <ul class="list-unstyled">
                <li><b>Power Supply</b></li>
                <li>@Model.PowersupplyBrand.BrandName ,@Model.Powersupply.Name, @Model.Powersupply.Efficiency </li>
            </ul>
        </td>
        <td>&nbsp;</td>
        <td>
            @Model.Powersupply.Price $
        </td>
    </tr>
    <tr>


        <td>
            &nbsp;

        </td>

        <td><b>Total Price: </b></td>
        <td><b>$@ViewBag.Total</b></td>
    </tr>


</table>

@using (Html.BeginForm("Save", "Build"))
{
<div class="form-group">
    @Html.Label("Build Name")
    @Html.TextBoxFor(m => m.builds.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.builds.Name)
    <button type="submit" class="btn btn-primary">Save</button>
</div>
}